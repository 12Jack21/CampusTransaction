<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.transaction.dao.AccountDAO">
    <!--查询与account关联的所有notice-->
    <resultMap id="accountWithNotices" type="account">
        <id property="id" column="id"/>
        <collection property="noticeList" ofType="com.example.transaction.pojo.Notice" column="id" select="com.example.transaction.dao.NoticeDAO.getByOwnerId"/>
    </resultMap>
    <select id="getAllAccount" resultMap="accountWithNotices" resultType="com.example.transaction.pojo.Account">
        select * from account;
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.transaction.dao.NoticeDAO">
    <update id="updateXML" parameterType="com.example.transaction.pojo.Notice">
        update notice
        set description=#{description}
        <if test="type != true">
            , `type`= true
        </if>
        where id = #{id}
    </update>
</mapper>
